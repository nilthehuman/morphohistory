#kivy 2.1
<Disc>
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 0
    size_hint: None, None  #size hints are kind of stupid
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            size: self.width, self.height
            pos: self.pos

<NameTag>:
    size: self.texture_size[0] + 5, self.texture_size[1] + 5
    size_hint: None, None
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
