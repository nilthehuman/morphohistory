#kivy 2.1
<SettingsTabLayout>
    orientation: 'vertical'
    CustomSettings:
        id: settings
        size_hint: 1, 1
    RelativeLayout:
        size_hint_y: None
        height: 50
        ApplySettingsButton:
            id: apply_button
            text: "Apply"
            pos_hint: {'center_x': 0.32}
            size_hint_x: None
            width: 200
        DiscardSettingsButton:
            id: discard_button
            text: "Cancel"
            pos_hint: {'center_x': 0.68}
            size_hint_x: None
            width: 200
