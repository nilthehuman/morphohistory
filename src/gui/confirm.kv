#kivy 2.1
#:import Window kivy.core.window.Window

<ConfirmedLabel>
    pos: (Window.width - self.width) / 2, (Window.height - self.height) / 2
    size_hint: None, None
    size: 100, 40
    color: 1, 1, 1, self.alpha

<ApplyConfirmedLabel>
    text: "Saved"
    canvas.before:
        Color:
            rgba: 0.05, 0.7, 0.2, self.alpha
        Rectangle:
            size: self.size
            pos: self.pos

<DiscardConfirmedLabel>
    text: "Alright"
    canvas.before:
        Color:
            rgba: 0.7, 0.15, 0.15, self.alpha
        Rectangle:
            size: self.size
            pos: self.pos
