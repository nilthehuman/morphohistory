    tab_height: 30
    tab_width: 120
    background_color: 0.16, 0.2, 0.24
    TabbedPanelItem:
        text: "Simulation"
        SimTabLayout:
            id: sim_layout
    TabbedPanelItem:
        text: "Settings"
        SettingsTabLayout:
            id: settings_layout
    TabbedPanelItem:
        text: "Paradigm"
        ParadigmTabLayout:
            id: para_layout
    TabbedPanelItem:
        text: "Tuning"
        TuningTabLayout:
            id: tuning_layout
